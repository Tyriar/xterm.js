{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "target": "es5",
    "rootDir": ".",
    "outDir": "../../lib/common",
    "sourceMap": true,
    "removeComments": true,
    "preserveWatchOutput": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "types": [
      "../../node_modules/@types/mocha",
      "../.."
    ]
  },
  "include": [
    "./**/*"
  ]
}
