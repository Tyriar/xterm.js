{
  "version": "2.0.0",
  "presentation": {
    "echo": false,
    "reveal": "always",
    "focus": false,
    "panel": "dedicated",
    "showReuseMessage": true
  },
  "tasks": [
    // Compound tasks
    {
      "label": "Development",
      "dependsOn": ["demo-server", "tsc-watch", "esbuild-watch"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    // Demo
    {
      "label": "demo-server",
      "type": "npm",
      "script": "start",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "group": "vscode"
      }
    },

    // Build
    {
      "label": "tsc-watch",
      "type": "npm",
      "script": "watch",
      "group": "build",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "group": "vscode"
      }
    },
    {
      "label": "esbuild-watch",
      "type": "npm",
      "script": "esbuild-watch",
      "group": "build",
      "isBackground": true,
      "problemMatcher": "$esbuild-watch",
      "presentation": {
        "group": "vscode"
      }
    },

    // Test
    {
      "type": "npm",
      "script": "test",
      "group":{
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
  ]
}
